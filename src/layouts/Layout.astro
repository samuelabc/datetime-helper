---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Unix Timestamp Calculator & Date Math Tool | datetime-helper',
  description = 'Free online Unix timestamp calculator with date math. Add or subtract days, months, years — instant results in Unix, ISO 8601, RFC 2822 formats. No ads, no tracking.',
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta property="og:title" content="datetime-helper — Unix Timestamp Calculator & Date Math" />
    <meta property="og:description" content="Free developer tool for Unix timestamp calculations and date math. Instant multi-format results." />
    <meta property="og:type" content="website" />
    <script is:inline>
      (() => {
        const THEME_STORAGE_KEY = 'theme';
        let theme = 'light';
        try {
          const savedTheme = localStorage.getItem(THEME_STORAGE_KEY);
          if (savedTheme === 'dark') {
            theme = 'dark';
          }
        } catch {
          theme = 'light';
        }
        const root = document.documentElement;
        root.classList.toggle('dark', theme === 'dark');
        root.style.colorScheme = theme;
      })();
    </script>
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-white dark:bg-slate-900 text-gray-900 dark:text-gray-100 font-sans antialiased">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <slot />
    <script is:inline>
      (() => {
        const THEME_STORAGE_KEY = 'theme';
        const root = document.documentElement;
        const updateToggleButtons = (theme) => {
          const isDark = theme === 'dark';
          const buttons = document.querySelectorAll('[data-theme-toggle]');
          for (const button of buttons) {
            if (!(button instanceof HTMLButtonElement)) continue;
            const label = button.querySelector('[data-theme-toggle-label]');
            const lightIcon = button.querySelector('[data-theme-toggle-icon-light]');
            const darkIcon = button.querySelector('[data-theme-toggle-icon-dark]');
            if (label) {
              label.textContent = isDark ? 'Light mode' : 'Dark mode';
            }
            button.setAttribute('aria-pressed', String(isDark));
            button.setAttribute('aria-label', isDark ? 'Switch to light mode' : 'Switch to dark mode');
            if (lightIcon instanceof HTMLElement) {
              lightIcon.classList.toggle('hidden', isDark);
            }
            if (darkIcon instanceof HTMLElement) {
              darkIcon.classList.toggle('hidden', !isDark);
            }
          }
        };

        const bindToggleButtons = () => {
          const buttons = document.querySelectorAll('[data-theme-toggle]');
          for (const button of buttons) {
            if (!(button instanceof HTMLButtonElement)) continue;
            if (button.dataset.themeBound === 'true') continue;
            button.dataset.themeBound = 'true';
            button.addEventListener('click', () => {
              window['__datetimeHelperTheme'].toggleTheme();
            });
          }
        };

        const applyTheme = (theme) => {
          const isDark = theme === 'dark';
          root.classList.toggle('dark', isDark);
          const normalizedTheme = isDark ? 'dark' : 'light';
          root.style.colorScheme = normalizedTheme;
          updateToggleButtons(normalizedTheme);
          window.dispatchEvent(
            new CustomEvent('themechange', {
              detail: { theme: normalizedTheme },
            }),
          );
        };

        const setTheme = (theme) => {
          const nextTheme = theme === 'dark' ? 'dark' : 'light';
          applyTheme(nextTheme);
          try {
            localStorage.setItem(THEME_STORAGE_KEY, nextTheme);
          } catch {
            // Ignore storage write failures; theme still applies for this session.
          }
          return nextTheme;
        };

        window['__datetimeHelperTheme'] = {
          getTheme() {
            return root.classList.contains('dark') ? 'dark' : 'light';
          },
          setTheme,
          toggleTheme() {
            return setTheme(root.classList.contains('dark') ? 'light' : 'dark');
          },
        };

        bindToggleButtons();
        applyTheme(root.classList.contains('dark') ? 'dark' : 'light');
      })();
    </script>
  </body>
</html>
