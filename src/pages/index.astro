---
import Layout from '../layouts/Layout.astro';
import Calculator from '../components/Calculator.svelte';
import SiteUtilityActions from '../components/SiteUtilityActions.astro';
---

<Layout>
  <main id="main-content" tabindex="-1" class="max-w-[960px] mx-auto px-4 md:px-6 lg:px-8 py-6">
    <header class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
      <div>
        <div class="flex items-center gap-3">
          <svg
            aria-hidden="true"
            viewBox="0 0 64 64"
            class="h-9 w-9 shrink-0"
            role="img"
          >
            <defs>
              <linearGradient id="site-logo-ring" x1="12" y1="12" x2="52" y2="52" gradientUnits="userSpaceOnUse">
                <stop offset="0" stop-color="#FDBA74" />
                <stop offset="0.5" stop-color="#FB923C" />
                <stop offset="1" stop-color="#F97316" />
              </linearGradient>
              <linearGradient id="site-logo-hands" x1="28" y1="20" x2="42" y2="40" gradientUnits="userSpaceOnUse">
                <stop offset="0" stop-color="#FFEDD5" />
                <stop offset="1" stop-color="#FDBA74" />
              </linearGradient>
            </defs>
            <circle cx="32" cy="32" r="16" stroke="url(#site-logo-ring)" stroke-width="4" />
            <path d="M32 32V22M32 32L42 37" stroke="url(#site-logo-hands)" stroke-width="4" stroke-linecap="round" />
            <circle cx="32" cy="32" r="2.2" fill="#FFF7ED" />
          </svg>
          <h1 class="font-serif text-2xl sm:text-3xl font-semibold tracking-tight text-gray-900 dark:text-gray-100">
            datetime-helper
          </h1>
        </div>
        <p class="mt-1 font-serif text-base sm:text-lg text-gray-700 dark:text-gray-300">
          Unix timestamp calculator and date math toolkit.
        </p>
        <nav aria-label="Documentation links" class="mt-2 flex flex-wrap items-center gap-3 text-xs sm:text-sm">
          <a
            href="/docs"
            class="inline-flex items-center text-gray-700 dark:text-gray-300 underline decoration-gray-300 dark:decoration-slate-600 underline-offset-2 hover:text-orange-700 dark:hover:text-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-500 rounded-sm"
          >
            Docs
          </a>
          <a
            href="/docs/developer-workflows"
            class="inline-flex items-center text-gray-600 dark:text-gray-400 underline decoration-gray-300 dark:decoration-slate-600 underline-offset-2 hover:text-gray-900 dark:hover:text-gray-200 focus:outline-none focus:ring-2 focus:ring-orange-500 rounded-sm"
          >
            Developer workflows
          </a>
          <a
            href="/docs/automation-url-contract"
            class="inline-flex items-center text-gray-600 dark:text-gray-400 underline decoration-gray-300 dark:decoration-slate-600 underline-offset-2 hover:text-gray-900 dark:hover:text-gray-200 focus:outline-none focus:ring-2 focus:ring-orange-500 rounded-sm"
          >
            Automation contract
          </a>
          <a
            href="/docs/ai-palette-usage"
            class="inline-flex items-center text-gray-600 dark:text-gray-400 underline decoration-gray-300 dark:decoration-slate-600 underline-offset-2 hover:text-gray-900 dark:hover:text-gray-200 focus:outline-none focus:ring-2 focus:ring-orange-500 rounded-sm"
          >
            AI palette usage
          </a>
        </nav>
      </div>
      <div class="self-start">
        <SiteUtilityActions />
      </div>
    </header>
    <Calculator client:load />
  </main>
</Layout>
